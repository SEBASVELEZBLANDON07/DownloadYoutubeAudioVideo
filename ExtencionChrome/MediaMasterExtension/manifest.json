{
  "manifest_version": 3,
  "name": "MediaMaster Extension",
  "version": "1.0",
  "description": "Extensi√≥n para descargar videos y audios de YouTube",
  "permissions": [
    "activeTab",
    "webRequest",
    "webNavigation",
    "storage",
    "downloads"
  ],
  "optional_host_permissions": 
    ["http://localhost/*"],

  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
